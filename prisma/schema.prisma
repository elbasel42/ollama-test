model User {
  id                    Int       @id @default(autoincrement())
  name                  String
  messages              Message[]
  currentConversationId String    @default(cuid())
}

// Update Message model to include conversation
model Message {
  id             Int    @id @default(autoincrement())
  content        String
  userId         Int
  user           User   @relation(fields: [userId], references: [id])
  conversationId String @default(cuid())
}
