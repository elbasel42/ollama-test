model User {
  id       String    @id @default(cuid())
  name     String
  messages Message[]
  currentConversationId String    @default(cuid())
}

model Message {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   String
  role      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  conversationId String @default(cuid())
}
